<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.css" rel="stylesheet" />
    <title>Historial Cargos</title>
</head>

<body class="bg-gray-100">
    <nav class="bg-white border-gray-200  mb-5">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
            <a href="/" class="flex items-center">
                <span class="self-center text-2xl font-semibold whitespace-nowrap  uppercase">Iglesia</span>
            </a>
            <div class="hidden w-full md:block md:w-auto" id="navbar-default">
                <ul
                    class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 md:mt-0 md:border-0 md:bg-white ">
                    <li>
                        <a href="/ministerio"
                            class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0  "
                            aria-current="page">
                            Ministerios
                        </a>
                    </li>
                    <li>
                        <a href="/cargo"
                            class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0  ">
                            Cargos </a>
                    </li>
                    <li>
                        <a href="/historial"
                            class="block py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0">
                            Historial Cargos </a>
                    </li>
                    <li>
                        <a href="/miembros"
                            class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0  ">
                            Miembros </a>
                    </li>
                    <li>
                        <a href="/eventos"
                            class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0  ">
                            Eventos </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- titulo que diga ministerios -->
    <div class="flex justify-center mb-5">
        <h1 class="text-3xl font-bold">Historial de cargos</h1>
    </div>

    <div class="grid grid-cols-2 px-10 pt-2">
        <div class="px-5 bg-white m-3 p-5 border rounded-md">
            <form id="formulario" class="formulario">
                <div class="hidden mb-2" id="id-card">
                    <label for="id" class="block mb-2 text-sm font-medium text-gray-900 ">
                        ID</label>
                    <input type="number" id="id" name="id" readonly
                        class=" bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
                        placeholder="" required>
                </div>
                <div class="mb-2">
                    <label for="fecha_inicio" class="block mb-2 text-sm font-medium text-gray-900 ">
                        Fecha Inicio</label>
                    <input type="date" id="fecha_inicio" name="fecha_inicio"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
                        required>
                </div>
                <div class=" mb-2">
                    <label for="fecha_final" class="block mb-2 text-sm font-medium text-gray-900 ">
                        Fecha Final</label>
                    <input type="date" id="fecha_final" name="fecha_final"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 ">
                </div>
                <div class=" mb-4">
                    <label for="countries" class="block mb-2 text-sm font-medium text-gray-900 ">
                        Estado</label>
                    <select id="estado" name="estado"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 ">
                        <option selected>Escoge un estado</option>
                        <option value="Activo">Activo</option>
                        <option value="Inactivo">Inactivo</option>
                    </select>
                </div>
                <div class=" mb-4">
                    <label for="countries" class="block mb-2 text-sm font-medium text-gray-900 ">
                        Miembro</label>
                    <select id="miembro_id" name="miembro_id"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 ">
                        <option selected>Escoge un miembro</option>
                        <% if (miembros) { %>
                            <% miembros.forEach((miembro)=> { %>
                                <option value="<%= miembro.id %>">
                                    <%= miembro.nombre %>
                                </option>
                                <% }); %>
                                    <% } else { %>
                                        <p>No hay datos disponibles.</p>
                                        <% } %>
                    </select>
                </div>
                <div class=" mb-4">
                    <label for="countries" class="block mb-2 text-sm font-medium text-gray-900 ">
                        Cargo</label>
                    <select id="cargo_id" name="cargo_id"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 ">
                        <option selected>Escoge un miembro</option>
                        <% if (cargos) { %>
                            <% cargos.forEach((miembro)=> { %>
                                <option value="<%= miembro.id %>">
                                    <%= miembro.nombre %>
                                </option>
                                <% }); %>
                                    <% } else { %>
                                        <p>No hay datos disponibles.</p>
                                        <% } %>
                    </select>
                </div>

                <button type="submit"
                    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center ">Guardar</button>
                <button type="submit" onclick="limpiarForm()"
                    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center ">Limpiar</button>
            </form>
        </div>

        <div class="relative overflow-x-auto px-5 bg-white m-3 p-5 border rounded-md">
            <table class="w-full text-sm text-left text-gray-500 ">
                <thead class="text-xs text-gray-800 uppercase bg-gray-200">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            ID
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Miembro
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Cargo
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Fecha de inicio
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Fecha de fin
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Estado
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% if (historial) { %>
                        <% historial.forEach((dato)=> { %>
                            <tr class="bg-white border border-1 ">
                                <td class="px-6 py-4">
                                    <%= dato.id %>
                                </td>
                                <td class="px-6 py-4">
                                    <%= dato.miembro_nombre %>
                                </td>
                                <td class="px-6 py-4">
                                    <%= dato.cargo_nombre%>
                                </td>
                                <td class="px-6 py-4">
                                    <%= dato.fecha_inicio %>
                                </td>
                                <td class="px-6 py-4">
                                    <%= dato.fecha_final %>
                                </td>
                                <td class="px-6 py-4">
                                    <%= dato.estado %>
                                </td>
                                <td class="px-6 py-4">
                                    <button class="text-blue-400 hover:text-blue-600" onclick="ponerDatosForm(event)"
                                        data-id="<%= dato.id %>" data-fecha_inicio="<%= dato.fecha_inicio %>"
                                        data-fecha_final="<%= dato.fecha_final %>" data-estado="<%= dato.estado %>"
                                        data-miembro_id="<%= dato.miembro_id %>" data-cargo_id="<%= dato.cargo_id %>">
                                        Actualizar
                                    </button>
                                    <button class="text-blue-400 hover:text-blue-600" onclick="eliminarDatos(event)"
                                        data-id="<%= dato.id %>">
                                        Eliminar
                                    </button>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <p>No hay datos disponibles.</p>
                                    <% } %>
                </tbody>
            </table>

        </div>
        <form action="" id="delete" class="hidden" method="GET">
            <input type="hidden" name="_method" value="DELETE" />
        </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.js"></script>
    <script>
        function reload() {
            location.reload();
        }

        function enviarDatos(event) {
            event.preventDefault();
            const formulario = document.getElementById('formulario');
            const formData = new FormData(formulario);
            const datos = {};
            formData.forEach((valor, clave) => { datos[clave] = valor; });
            const metodo = 'POST';
            const endPoint = datos.id ? `/historial/update` : '/historial/create';
            formulario.method = metodo;
            formulario.action = endPoint;
            formulario.submit();
        }
        const formulario = document.getElementById('formulario');
        formulario.addEventListener('submit', enviarDatos);

        function eliminarDatos(event) {
            const id = event.currentTarget.getAttribute('data-id');
            const deleteForm = document.getElementById('delete');
            const idInput = document.createElement('input');
            idInput.type = 'hidden';
            idInput.name = 'id';
            idInput.value = id;
            deleteForm.appendChild(idInput);
            deleteForm.method = 'POST';
            deleteForm.action = `/historial/delete`;
            deleteForm.submit();
        }

        function ponerDatosForm(event) {
            const id = event.currentTarget.getAttribute('data-id');
            const fecha_inicio = event.currentTarget.getAttribute('data-fecha_inicio');
            const fecha_final = event.currentTarget.getAttribute('data-fecha_final');
            const estado = event.currentTarget.getAttribute('data-estado');
            const miembro_id = event.currentTarget.getAttribute('data-miembro_id');
            const cargo_id = event.currentTarget.getAttribute('data-cargo_id');

            const formulario = document.getElementById('formulario');
            const idCard = document.getElementById('id-card');

            const idInput = document.getElementById('id');
            const fecha_inicioInput = document.getElementById('fecha_inicio');
            const fecha_finalInput = document.getElementById('fecha_final');
            const estadoInput = document.getElementById('estado');
            const miembro_idInput = document.getElementById('miembro_id');
            const cargo_idInput = document.getElementById('cargo_id');

            console.log(fecha_inicio);
            console.log(fecha_final);

            idInput.value = id;
            estadoInput.value = estado;
            miembro_idInput.value = miembro_id;
            cargo_idInput.value = cargo_id;
            fecha_inicioInput.setAttribute('value', fecha_inicio);
            fecha_finalInput.setAttribute('value', fecha_final);
            idCard.style.display = 'block';
        }

        function limpiarForm() {
            const idCard = document.getElementById('id-card');

            const idInput = document.getElementById('id');
            const fecha_inicioInput = document.getElementById('fecha_inicio');
            const fecha_finalInput = document.getElementById('fecha_final');
            const estadoInput = document.getElementById('estado');
            const miembro_idInput = document.getElementById('miembro_id');
            const cargo_idInput = document.getElementById('cargo_id');

            idInput.value = '';
            fecha_inicioInput.setAttribute('value', '');
            fecha_finalInput.setAttribute('value', '');
            estadoInput.value = '';
            miembro_idInput.value = '';
            cargo_idInput.value = '';
            idCard.style.display = 'none';
        }

    </script>
</body>

</html>